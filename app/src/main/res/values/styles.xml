<resources>

    <style name="AppTheme">
        <item name="colorPrimary">@color/greyBright</item>
        <item name="colorPrimaryDark">@color/greyShadow</item>
        <item name="colorAccent">@color/greyHighlight</item>
    </style>

    <style name="AppTheme.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="theme">@style/AppTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="theme">@style/AppTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
