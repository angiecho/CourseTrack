<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.angiecho.coursetrack">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.DarkActionBar">
        <activity android:name=".BaseActivity"/>
        <activity android:name=".login.EmailSignUpActivity"/>
        <activity
                android:name=".splashscreen.SplashScreenActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".login.EmailSignInActivity"/>
        <activity
                android:name=".coursedata.CourseDataActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".login.EmailAuthActivity">
        </activity>
        <activity android:name=".coursedata.NavigationDrawerActivity">
        </activity>
        <activity android:name=".login.LoginTaskDelegate">
        </activity>
    </application>

</manifest>